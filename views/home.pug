extends layout
block content

  .hero
    -let images = ['hero', 'hero2', 'hero3', 'hero4']
    each image in images
      .image__slide.fade
        img(src=`/images/photos/${image}.jpg` alt='hero image')
        a.hero__text(href='#') Discover
    a(class="prev") &#10094;
    a(class="next") &#10095;

  //- The dots/circles
  div(style="text-align:center")
    span(class="dot")
    span(class="dot")
    span(class="dot")
    span(class="dot")

  .home__contents
    section(class="products")
      .section__title
        a(href='#') Shop the Collection
      .products__center
    
    //- cart
    .cart__overlay
      .cart
        span(class='close__cart')
          i.fas.fa-window-close
        h2 your cart

        .cart__content

        .cart__footer
          h3 your total: $ 
            span.cart__total 0 
          button.clear__cart.banner__btn clear cart