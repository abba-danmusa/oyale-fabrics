doctype html
html
  head
    title= `${title} | ${h.siteName}`
    link(rel="stylesheet", href="/sass/style.css")
    link(rel='shortcut icon', type='image/png' href='/images/icons/snowman.png')
    link(href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet")
    meta(name='viewport', content='width=device-width, initial-scale=1')
    
  body.body
    block header
      nav
        .ads
          button.chevron__left
            !=h.icon('chevron-left-solid')
          div
            h1 Lorem ipsum dolor sit amet, consectetur adipiscing, consectetur adipiscing. 
            a.learn__more(href='#') Learn More
          button.chevron__right
            !=h.icon('chevron-right-solid')
        .menu__items
          .menu__left
            each item in h.menu
              .menu__item
                a(href=item.link) !{item.title}
          .menu__site-name
            h1 Oyale Fabrics
          .menu__right      
            -let menus = ['search-solid', 'user-solid']
            each icon in menus
              button.button 
                != h.icon(icon)
            .cart__btn
              span(class="nav__icon")
                != h.icon('shopping-bag-solid')
              .cart__items 0
            !=h.icon('bars-solid')

        //- menu
        .cart__overlay
          .cart
            span(class='close__cart')
              i.fas.fa-window-close
            h2 your cart

            .cart__content

            .cart__footer
              h3 Oyale Fabrics And Fashion Empire
              h3 All Rights Reserved

    .content  
      block messages
      if locals.flashes
        .inner
          .flash-messages
            - const categories = Object.keys(locals.flashes)
            each category in categories
              each message in flashes[category]
                .flash(class=`flash--${category}`)
                  p.flash__text!= message
                  button.flash__remove(onClick="this.parentElement.remove()") &times;
      block content

    footer.footer
      block footer
        -let icons = ['twitter-brands', 'instagram-brands',  'pinterest-brands', 'facebook-f-brands']
        .socials
          each icon in icons
            a.social(href="#")
              != h.icon(icon)
        .copyright
          p privacy | contact
          p &copy 2021 Oyale Fabrics and Fashion Empire. 
          p All rights reserved.
          

    block scripts
      script(src='/dist/App.bundle.js', defer)
      script(src='/dist/cartSystem.js', defer)
      script(src="https://cdn.jsdelivr.net/npm/contentful@latest/dist/contentful.browser.min.js")
      script(src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/gsap.min.js", defer)
      script(src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/ScrollTrigger.min.js", defer)
      script(src="https://kit.fontawesome.com/ca3717ead6.js" crossorigin="anonymous", defer)
            
          